<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro_profundo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con bandera y efecto glassmorphism -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <!-- Bandera de fondo -->
            <ImageView
                android:id="@+id/imagenBandera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Bandera"/>

            <!-- Overlay con gradiente -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradiente_principal"
                android:alpha="0.7"/>

            <!-- Nombre del país con efecto glassmorphism -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="32dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="#40FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textoNombrePais"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="País"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/blanco_puro"
                        android:shadowColor="#000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="8"
                        android:gravity="center"/>

                    <View
                        android:layout_width="80dp"
                        android:layout_height="3dp"
                        android:background="@drawable/linea_neon"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="-40dp">

            <!-- Tarjeta del Mapa Interactivo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="16dp"
                app:cardBackgroundColor="@color/gris_carbon"
                app:strokeWidth="2dp"
                app:strokeColor="@color/purpura_neon"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Mapa -->
                    <org.osmdroid.views.MapView
                        android:id="@+id/mapaCapital"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Overlay superior con gradiente -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/gradiente_principal"
                        android:alpha="0.5"/>

                    <!-- Indicador de carga del mapa -->
                    <LinearLayout
                        android:id="@+id/barraProgresoMapa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible">

                        <ProgressBar
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:indeterminateTint="@color/cyan_brillante"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🗺️ Buscando ubicación..."
                            android:textColor="@color/blanco_puro"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:background="#80000000"
                            android:padding="12dp"
                            android:elevation="4dp"/>
                    </LinearLayout>

                    <!-- Info del mapa con efecto glassmorphism -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#CC1E293B">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/textoCapitalMapa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="📍 Buscando capital..."
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/blanco_puro"/>

                            <TextView
                                android:id="@+id/textoCoordenadasMapa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Preparando mapa..."
                                android:textSize="12sp"
                                android:textColor="@color/gris_claro"
                                android:layout_marginTop="6dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Información General -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/gris_carbon"
                app:strokeWidth="1dp"
                app:strokeColor="#334155"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Header con ícono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="50dp"
                            android:background="@drawable/gradiente_principal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📋 Información General"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/blanco_puro"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>

                    <!-- Datos del país -->
                    <TextView
                        android:id="@+id/textoNombreOficial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre oficial"
                        android:textSize="15sp"
                        android:textColor="@color/gris_claro"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="4dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/linea_neon"
                        android:layout_marginVertical="12dp"
                        android:alpha="0.3"/>

                    <TextView
                        android:id="@+id/textoCapital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capital"
                        android:textSize="15sp"
                        android:textColor="@color/gris_claro"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="4dp"/>

                    <TextView
                        android:id="@+id/textoRegion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Región"
                        android:textSize="15sp"
                        android:textColor="@color/gris_claro"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="4dp"/>

                    <TextView
                        android:id="@+id/textoSubregion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subregión"
                        android:textSize="15sp"
                        android:textColor="@color/gris_claro"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="4dp"/>

                    <TextView
                        android:id="@+id/textoPoblacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Población"
                        android:textSize="15sp"
                        android:textColor="@color/gris_claro"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="4dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/linea_neon"
                        android:layout_marginVertical="12dp"
                        android:alpha="0.3"/>

                    <TextView
                        android:id="@+id/textoCodigosISO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Códigos ISO"
                        android:textSize="15sp"
                        android:textColor="@color/gris_claro"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="4dp"/>

                    <TextView
                        android:id="@+id/textoMonedas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monedas"
                        android:textSize="15sp"
                        android:textColor="@color/gris_claro"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="4dp"/>

                    <TextView
                        android:id="@+id/textoIdiomas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Idiomas"
                        android:textSize="15sp"
                        android:textColor="@color/gris_claro"
                        android:layout_marginBottom="12dp"
                        android:lineSpacingExtra="4dp"/>

                    <TextView
                        android:id="@+id/textoCoordenadas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Coordenadas"
                        android:textSize="15sp"
                        android:textColor="@color/gris_claro"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de Clima con gradiente -->
            <androidx.cardview.widget.CardView
                android:id="@+id/tarjetaClima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="28dp"
                app:cardElevation="16dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/naranja_energia"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Fondo con gradiente -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradiente_clima"
                        android:alpha="0.2"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="28dp">

                        <!-- Header del clima -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="50dp"
                                android:background="@drawable/gradiente_clima"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="☀️ Clima Actual"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/blanco_puro"
                                android:layout_marginStart="16dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textoUbicacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubicación"
                            android:textSize="16sp"
                            android:textColor="@color/gris_claro"
                            android:layout_marginBottom="20dp"/>

                        <!-- Temperatura principal -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="8dp"
                            app:cardBackgroundColor="#40FFFFFF"
                            android:layout_marginBottom="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="20dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/imagenIconoClima"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="Icono del clima"/>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginStart="20dp">

                                    <TextView
                                        android:id="@+id/textoTemperatura"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="25°C"
                                        android:textSize="48sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/blanco_puro"/>

                                    <TextView
                                        android:id="@+id/textoCondicion"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Soleado"
                                        android:textSize="18sp"
                                        android:textColor="@color/gris_claro"
                                        android:layout_marginTop="4dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Detalles adicionales del clima -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/fondo_tarjeta_glassmorphism"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🌡️"
                                    android:textSize="24sp"/>

                                <TextView
                                    android:id="@+id/textoSensacionTermica"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Sensación térmica: 27°C"
                                    android:textSize="15sp"
                                    android:textColor="@color/blanco_puro"
                                    android:layout_marginStart="12dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="💨"
                                    android:textSize="24sp"/>

                                <TextView
                                    android:id="@+id/textoViento"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Viento: 15 km/h"
                                    android:textSize="15sp"
                                    android:textColor="@color/blanco_puro"
                                    android:layout_marginStart="12dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="💧"
                                    android:textSize="24sp"/>

                                <TextView
                                    android:id="@+id/textoHumedad"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Humedad: 65%"
                                    android:textSize="15sp"
                                    android:textColor="@color/blanco_puro"
                                    android:layout_marginStart="12dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Indicador de carga del clima -->
            <LinearLayout
                android:id="@+id/barraProgresoClima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:indeterminateTint="@color/naranja_energia"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obteniendo clima..."
                    android:textColor="@color/blanco_puro"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <!-- Mensaje de error del clima -->
            <androidx.cardview.widget.CardView
                android:id="@+id/textoMensajeClima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/error"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Error al cargar el clima"
                    android:textSize="14sp"
                    android:textColor="@color/blanco_puro"
                    android:gravity="center"
                    android:padding="16dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>